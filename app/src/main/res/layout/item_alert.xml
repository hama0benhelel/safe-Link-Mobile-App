<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/border_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icône de statut (ouvert, mitigé, ignoré) -->
        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_status_circle"

            android:contentDescription="bg"
            android:padding="12dp"
            android:src="@drawable/ic_status_open"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Type d'attaque -->
            <TextView
                android:id="@+id/tvAttackType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brute Force Attack"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- IP source -->
            <TextView
                android:id="@+id/tvSourceIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="192.168.1.105"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Il y a 5 minutes"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Sévérité (Critique, Élevé, etc.) -->
        <TextView
            android:id="@+id/tvSeverity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_severity_pill"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="@string/critice"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>